<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.buiderdream.apehire.view.activitys.JobActivity">
    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="@color/burlywood">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位详情"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/titleLayout">


        <RelativeLayout
            android:id="@+id/job_detail_part1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@color/white">

            <TextView
                android:text="阿里巴巴"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/textView" />

            <TextView
                android:text="北京市海淀区"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:text="Android工程师"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="@color/hotpink"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_above="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp" />

            <TextView
                android:text="8K~12K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="@color/hotpink"
                android:textSize="18sp"
                android:layout_marginEnd="35dp"
                android:layout_above="@+id/textView3"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/job_detail_part1"
            android:id="@+id/job_detail_part2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:text="职位详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:id="@+id/textView6"
                android:textColor="@color/blueviolet"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="11dp"
                android:id="@+id/textView7"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textView6"
                android:layout_marginBottom="10dp"
                android:layout_alignStart="@+id/textView6" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/job_detail_part2"
            android:id="@+id/job_detail_part3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:text="技能要求"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:id="@+id/textView6"
                android:textColor="@color/blueviolet"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="11dp"
                android:id="@+id/textView7"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textView6"
                android:layout_marginBottom="10dp"
                android:layout_alignStart="@+id/textView6" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
