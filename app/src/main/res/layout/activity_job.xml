<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.buiderdream.apehire.view.activitys.JobActivity">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/titlebar">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/imgContentDescription"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:onClick="backClick"
            android:src="@mipmap/ic_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Job_desc"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/job_like_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collection"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:background="@drawable/bg_exit_btn"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/sendJobReq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:text="@string/Immediate_delivery"
        android:textColor="@color/white"
        android:textSize="18sp"  />

    <RelativeLayout
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sendJobReq"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleLayout"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/job_detail_part1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2.18"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/jd_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/jd_title"
                        android:layout_centerVertical="true"
                        android:text="阿里巴巴" />

                    <TextView
                        android:id="@+id/jd_company_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/jd_company_name"
                        android:layout_below="@+id/jd_company_name"
                        android:text="北京市海淀区" />

                    <TextView
                        android:id="@+id/jd_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/jd_company_name"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="11dp"
                        android:layout_marginStart="20dp"
                        android:text="Android工程师"
                        android:textColor="#2eafa0"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/jd_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/jd_company_name"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="35dp"
                        android:text="8K~12K"
                        android:textColor="@color/hotpink"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/job_detail_part2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/job_detail_part1"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="13dp"
                        android:text="职位详情"
                        android:textColor="#2eafa0" />

                    <ImageView
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:contentDescription="@string/imgContentDescription"
                        android:layout_alignStart="@+id/textView"
                        android:layout_below="@id/textView"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/jd_detail"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignStart="@+id/textView"
                        android:layout_below="@+id/line1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:text="详细工作职责" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/job_detail_part3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/job_detail_part2"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="13dp"
                        android:text="技能要求"
                        android:textColor="#2eafa0" />

                    <ImageView
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:contentDescription="@string/imgContentDescription"
                        android:layout_alignStart="@+id/textView2"
                        android:layout_below="@id/textView2"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/jd_technology"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignStart="@+id/textView2"
                        android:layout_below="@+id/textView2"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:text="技能要求" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/job_detail_part4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_detail_part3"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="公司介绍"
                        android:textColor="#2eafa0" />

                    <ImageView
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:contentDescription="@string/imgContentDescription"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_below="@id/textView3"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightgray" />

                    <ImageView
                        android:id="@+id/jd_company_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@+id/textView3"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/imgContentDescription"
                        android:src="@drawable/icon_head_200px" />

                    <TextView
                        android:id="@+id/jd_company_address2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/jd_company_img"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/jd_company_img"
                        android:text="北京上地五道口"
                        android:textSize="@dimen/order_size" />

                    <TextView
                        android:id="@+id/jd_company_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/jd_company_scale"
                        android:layout_alignTop="@+id/jd_company_img"
                        android:text="阿里巴巴"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_size" />

                    <TextView
                        android:id="@+id/jd_company_scale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/jd_company_address2"
                        android:layout_below="@+id/jd_company_name2"
                        android:text="B轮,20-99人"
                        android:textSize="@dimen/order_size" />

                    <TextView
                        android:id="@+id/jd_company_detail"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignStart="@+id/jd_company_img"
                        android:layout_below="@+id/jd_company_img"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:text="公司详情介绍" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>
