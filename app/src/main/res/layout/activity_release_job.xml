<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_release_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.buiderdream.apehire.view.activitys.ReleaseJobActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:background="@drawable/titlebar"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/imgContentDescription"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="@string/release_job"
            android:textSize="@dimen/title_font" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/darkgray" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <RelativeLayout
                android:id="@+id/rl_companyName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <TextView
                    style="@style/PersonalInfoTextStyle"
                    android:text="@string/CompanyName"
                    />

                <TextView
                    android:id="@+id/tv_companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/order_size"
                    android:layout_toStartOf="@+id/img_RA2"
                    />

                <ImageView
                    android:id="@+id/img_RA2"
                    style="@style/PersonalInfoRightArrowStyle"
                    android:contentDescription="@string/imgContentDescription" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightgray" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_jobName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <TextView
                    style="@style/PersonalInfoTextStyle"
                    android:text="@string/job_name"
                    />

                <TextView
                    android:id="@+id/tv_jobName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/order_size"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightgray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_city"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/PersonalInfoTextStyle"
                    android:text="@string/city" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightgray" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_city"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jobType"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/PersonalInfoTextStyle"
                    android:text="@string/jobType" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightgray" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_jobType"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jobCharge"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/PersonalInfoTextStyle"
                    android:text="@string/jobCharge" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightgray" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_jobCharge"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_jobDetail"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/PersonalInfoTextStyle"
                    android:text="@string/jobDetail" />

                <ImageView
                    style="@style/PersonalInfoRightArrowStyle"
                    android:contentDescription="@string/imgContentDescription" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lightgray" />

                <TextView
                    android:id="@+id/tv_jobDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/order_size"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_jobTechnology"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/PersonalInfoTextStyle"
                    android:text="@string/JobTechnology" />

                <ImageView
                    style="@style/PersonalInfoRightArrowStyle"
                    android:contentDescription="@string/imgContentDescription" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lightgray" />

                <TextView
                    android:id="@+id/tv_jobTechnology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/order_size"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_button"
                android:text="@string/release_job"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
