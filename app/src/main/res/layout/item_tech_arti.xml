<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/imgContentDescription"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_head_200px"
        android:id="@+id/img_userHeader" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_alignTop="@+id/img_userHeader"
        android:layout_toEndOf="@+id/img_userHeader"
        android:textSize="@dimen/order_size"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="@dimen/order_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_alignStart="@+id/tv_userName" />

    <TextView
        android:id="@+id/tv_replies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/order_size"
        android:lines="1"
        android:layout_alignTop="@+id/img_userHeader"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/order_size"
        android:lines="1"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/img_userHeader"
        android:layout_alignBottom="@+id/img_userHeader"
        android:layout_alignStart="@+id/tv_userName"
        />
</RelativeLayout>



</RelativeLayout>
