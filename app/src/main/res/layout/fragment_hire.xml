<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:background="#7cdcd1">

        <TextView
            android:text="北京"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/cityMark"
            android:visibility="gone"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职  位"
            android:padding="10dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/title_job"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/jobSelectLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLayout"
        android:background="@color/white"
        android:padding="5dp">

        <TextView
            android:text="城市筛选"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/job_city"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:text="职位筛选"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/job_type"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:text="薪资筛选"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/job_charge"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ListView
        android:id="@+id/jobListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jobSelectLayout"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"
        android:divider="@null"
        />


</RelativeLayout>